<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xudis.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Demo for development only!!! " />

        <ToggleButton
            android:id="@+id/scan"
            android:layout_width="match_parent"
            android:layout_height="40pt"
            android:textOff="Surrounding is not observed"
            android:textOn="Surrounding is observed" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="40pt"
            android:text="Notify people in range within last 24h" />

        <Button
            android:id="@+id/check"
            android:layout_width="match_parent"
            android:layout_height="40pt"
            android:text="Check for contacts within last 24h" />

        <Button
            android:id="@+id/erase"
            android:layout_width="match_parent"
            android:layout_height="40pt"
            android:text="Erase Data" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>